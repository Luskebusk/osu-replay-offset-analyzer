/* Header styling */
QTreeWidget QHeaderView::section {
    background-color: rgba(60, 60, 76, 0.5);
    color: #FFFFFF;
    font-weight: bold;
    padding: 8px 2px;
    border: none;
    border-bottom: 1px solid #3A3A46;
    text-align: center;
}

QTreeWidget QHeaderView::section:first {
    border-top-left-radius: 0px;
}

QTreeWidget QHeaderView::section:last {
    border-top-right-radius: 0px;
    /* Attempt to force width via QSS (Removed width property) */
    /* width: 55px; */ /* Set fixed width for the last section */
    /* max-width: 55px; */ /* Commented out max-width */
}

/* Remove hover effect for header sections */
QTreeWidget QHeaderView::section:hover {
    background-color: rgba(70, 70, 86, 0.6);
}

/* ====================
   Information Page Styles
   ==================== */

#infoPage {
    /* Add background or specific styles for the whole info page if needed */
}

#infoScroll {
    /* No border for the scroll area itself */
    border: none;
}

#infoScrollContent {
    /* Add some padding inside the scroll content if needed, */
    /* but margins were added in the layout already */
}

#infoSection {
    background-color: rgba(255, 255, 255, 0.04); /* Slightly lighter background for sections */
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    padding: 15px; /* Add padding within the section frame */
}

#infoHeading {
    font-size: 16px; /* Larger heading */
    font-weight: bold;
    color: #E0E0E0; /* Slightly brighter heading color */
    margin-bottom: 5px; /* Space below heading before separator */
}

#infoContent {
    font-size: 14px;
    color: #CCCCCC; /* Standard text color */
    line-height: 1.5; /* Improve readability */
}

/* Styling for HTML elements within infoContent */
#infoContent ul {
    margin-left: 20px; /* Indent bullet points */
    margin-top: 5px;
    margin-bottom: 5px;
}

#infoContent li {
    margin-bottom: 8px; /* Space between bullet points */
}

#infoContent code {
    background-color: rgba(0, 0, 0, 0.3);
    padding: 1px 4px;
    border-radius: 3px;
    font-family: Consolas, monospace;
    font-size: 13px;
}

#infoContent b {
    color: #FFFFFF; /* Make bold text white for emphasis */
}

/* Separator line style (used in info page and settings) */
#separator {
    border: none;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.15); /* Adjust color/opacity as needed */
    margin-top: 5px;
    margin-bottom: 10px;
} 